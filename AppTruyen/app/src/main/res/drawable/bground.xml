<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="3dp"
                android:color="#FF0000"/> <!-- Change color on press -->
            <corners
                android:radius="30dp"/>
            <solid
                android:color="@color/white"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/white"/>
            <corners
                android:radius="15dp"/>
        </shape>
    </item>
</selector>
