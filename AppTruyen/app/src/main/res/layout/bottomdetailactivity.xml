<LinearLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:id="@+id/layoutitemdetail"
    android:weightSum="10"
    android:layout_alignParentBottom="true"
    android:background="@color/colorMain"

    android:layout_weight="1"


    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:src="@drawable/outline_mode_comment_24"
        android:layout_marginTop="5dp"
        android:id="@+id/imgCmt"


        android:layout_height="36dp">

    </ImageView>

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1.1"
        android:layout_marginRight="10dp"

        android:layout_marginTop="3dp"
        android:id="@+id/imgHeart"

        android:src="@drawable/heartwhiteepng"
        android:scaleType="fitXY"

        android:layout_height="36dp">

    </ImageView>

    <Button
        android:layout_width="0dp"

        android:layout_weight="7"
        android:id="@+id/btnReadComics"
        android:layout_height="wrap_content"
        android:text="Doc truyen"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@drawable/custom_btnloginver2"
        android:padding="5dp">

    </Button>

</LinearLayout>